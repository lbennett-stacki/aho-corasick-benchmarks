{
	"compilerOptions": {
		"target": "ES2022",
		"module": "ESNext",
		"moduleResolution": "bundler",
		"esModuleInterop": true,
		"allowSyntheticDefaultImports": true,
		"strict": true,
		"skipLibCheck": true,
		"forceConsistentCasingInFileNames": true,
		"resolveJsonModule": true,
		"isolatedModules": true,
		"outDir": "dist",
		"rootDir": ".",
		"declaration": true,
		"sourceMap": true
	},
	"include": ["src/**/*", "scripts/**/*"],
	"exclude": ["node_modules", "dist", "corpus", "results"]
}
